<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cursomulti.paintii.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/guardar" />

            <ImageButton
                android:id="@+id/nuevo"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/nuevo" />

            <ImageButton
                android:id="@+id/pintar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/pincel" />

            <ImageButton
                android:id="@+id/borrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/borrar" />
        </LinearLayout>

        <com.example.cursomulti.paintii.Dibujar
            android:id="@+id/dibujar"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="#FFFFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/verde"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:onClick="onClick"
                android:tag="FF00DDFF"
                app:srcCompat="@android:color/holo_green_dark" />

            <ImageButton
                android:id="@+id/azul"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:tag="#FF00DDFF"
                app:srcCompat="@android:color/holo_blue_bright" />

            <ImageButton
                android:id="@+id/rojo"
                android:layout_width="62dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:tag="#FFCC0000"
                app:srcCompat="@android:color/holo_red_dark" />

            <ImageButton
                android:id="@+id/negro"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:tag="#FF000000"
                app:srcCompat="@android:color/background_dark" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/naranja"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:tag="#FFFF8800"
                app:srcCompat="@android:color/holo_orange_dark" />

            <ImageButton
                android:id="@+id/morado"
                android:layout_width="61dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:tag="#3F51B5"
                app:srcCompat="?attr/colorPrimary" />

            <ImageButton
                android:id="@+id/rosa"
                android:layout_width="61dp"
                android:layout_height="66dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:tag="#FF4081"
                app:srcCompat="?android:attr/textColorLinkInverse" />

            <ImageButton
                android:id="@+id/gris"
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:tag="#AAA"
                app:srcCompat="@android:color/darker_gray" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
